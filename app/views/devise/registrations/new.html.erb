<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class = "text-center">
        <% if params[:plan] == '2' %>
            <h1>Pro Account</h1>
            <p>Sign up for a pro account for $10/month and get full access to the DevMatch community and their contact information!</p>
        <% else %>
            <h1>Basic Account</h1>
            <p>Sign up for free and get basic access to the DevMatch community.</p>
        <% end %>
      </div>
      <div class="well">
        <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
        <% else %>
            <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
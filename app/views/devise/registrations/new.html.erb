<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <% if params[:plan] == '2' %>
            <div class = "text-center">
              <h1>Pro Account</h1>
              <p>Sign up for a pro account for $10/month and get full access to the DevMatch community and their contact information!</p>
            </div>
            <div class="well">
              <%= render "pro_form" %>
              <%= render "devise/shared/links" %>
            </div>
        <% else %>
            <div class = "text-center">
              <h1>Basic Account</h1>
              <p>Sign up for free and get basic access to the DevMatch community.</p>
            </div>
            <div class="well">
              <%= render "basic_form" %>
              <%= render "devise/shared/links" %>
            </div>
        <% end %>
    </div>
  </div>
</div>